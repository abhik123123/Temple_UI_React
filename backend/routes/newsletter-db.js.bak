const express = require('express');
const router = express.Router();
const db = require('../config/database');
const { sendWelcomeEmail } = require('../utils/emailService');

router.get('/', async (req, res) => {
  try {
    const result = await db.query('SELECT * FROM newsletter_subscriptions WHERE status = \'active\' ORDER BY subscription_date DESC');
    res.json(result.rows);
  } catch (error) {
    res.status(500).json({ error: 'Failed to fetch subscriptions' });
  }
});

router.post('/subscribe', async (req, res) => {
  try {
    const { email } = req.body;
    
    // Check if already subscribed
    const existingResult = await db.query(
      'SELECT * FROM newsletter_subscriptions WHERE email = $1',
      [email]
    );
    
    if (existingResult.rows.length > 0) {
      return res.status(200).json({ message: 'Already subscribed', alreadyExists: true });
    }
    
    // Insert new subscription
    const result = await db.query(
      'INSERT INTO newsletter_subscriptions (email) VALUES ($1) RETURNING *',
      [email]
    );
    
    // Send welcome email
    try {
      await sendWelcomeEmail(email);
      console.log('âœ“ Welcome email sent to:', email);
    } catch (emailError) {
      console.error('Failed to send welcome email:', emailError.message);
      // Don't fail the subscription if email fails
    }
    
    res.status(201).json({ 
      message: 'Subscribed successfully', 
      subscription: result.rows[0]
    });
  } catch (error) {
    console.error('Subscribe error:', error);
    res.status(500).json({ error: 'Failed to subscribe' });
  }
});

router.post('/unsubscribe', async (req, res) => {
  try {
    const { email } = req.body;
    await db.query('UPDATE newsletter_subscriptions SET status = \'unsubscribed\' WHERE email = $1', [email]);
    res.json({ message: 'Unsubscribed successfully' });
  } catch (error) {
    res.status(500).json({ error: 'Failed to unsubscribe' });
  }
});

module.exports = router;
